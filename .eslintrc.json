{
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"eslint:recommended",
		"prettier"
	],
	"plugins": ["simple-import-sort"],
	"rules": {
		"simple-import-sort/imports": "error",
		"simple-import-sort/exports": "error"
	},
	"env": {
		"node": true,
		"es6": true,
		"commonjs": true
	},
	"parserOptions": {
		"ecmaVersion": 2019,
		"project": ["./tsconfig.json"]
	}
}
